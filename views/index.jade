extends layout
html(lang="en" xmlns="http://www.w3.org/1999/xhtml" xmlns:fb="http://ogp.me/ns/fb#")

block vars
	- title = 'Home'
	- activeMenu = 'home'
	meta(property='og:image' content='../images/FBimage.jpg')

block content
	div.container
		div.row
				div.col-md-12
					div(align="center")
						div.col-md-6

							button.button(style="vertical-align:middle" onclick='search()') 
								span Search off-flavors
