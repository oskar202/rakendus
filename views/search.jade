extends layout

block vars
		- title = 'Search'

block content
		div.container
			div.row
				div.col-md-6
						div.col-md-8
							h1 Search flavors

							form(method="GET", action="/flavors")
								div.form-group
									label Flavor quality
									input(type="text",name="quality", class="form-control", placeholder="Mold")
									br
									label Product Category
									input(type="text",name="category", class="form-control", placeholder="Earth")
									br
									label Retention index
									input(type="text",name="retention", class="form-control", placeholder="876")
								div.actions
									button(type="submit",class="btn btn-default") Search
